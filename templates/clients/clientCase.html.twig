{% extends 'base.html.twig' %}

{% block title %}Cas clients
{% endblock %}

{% block body %}
	<section class="after:content-[''] after:table after:clear-both">
		<div class="item pointer-events-none block relative float-left clear-both w-full bg-black">
			<div class="item-bg block relative float-left clear-both overflow-visible h-[70vh] min-h-[500px] w-full">
				<div class="bg-wrap block absolute top-0 left-0 w-full h-full overflow-hidden">
					<div class="bg-container h-[calc(100%+80px)] block absolute top-[-40px] left-0 w-full overflow-hidden">
						<div class="video-wrap block absolute top-1/2 left-1/2 w-auto h-auto min-w-full min-h-full translate-x-[-50%] translate-y-[-50%] pointer-events-none">
							{{ coverAndPictures[0].vimeoId|raw }}
						</div>
					</div>
				</div>
				<div class="logo-wrap flex flex-col justify-center items-center absolute top-0 left-0 w-full h-full z-30 bg-black bg-opacity-10">
					<div class="label block absolute top-[10%] left-0 w-full text-center text-white uppercase">
						Cas client
					</div>
					<span class="dotted block absolute top-[calc(10%+30px)] h-[calc(25vh-(10%+30px)] min-h-[20%] w-[4px] ml-[-2px] bg-dot bg-repeat-y bg-top bg-[length:15px_15px]"></span>
					<div class="logo w-[60%] h-[30%] max-w-[800px] cursor-pointer">
						<img class="w-full h-full  max-w-[100%] align-bottom" src="{{ asset('assets/uploads/svg/' ~ coverAndPictures[0].logo )}}" alt="">
					</div>
				</div>
			</div>
		</div>



		<div class="heading-wrap z-60 mt-[-70px] block relative  float-left clear-both w-full h-full px-[10%] 3xl:px-[20%]">
			<div class="heading block relative float-left clear-both z-20 after:content-[''] after:table after:clear-both">
				<span class="spectrum-lines text-[90px] font-black mb-[40px] leading-[100%] tracking-[-0.15vw]">

					{% if sentences[0] %}
						<span class="line1 block relative z-10 left text-black clear-both bg-color-line pl-[10px] left-[-10px] bg-repeat-x bg-[length:100vw_0.2em] bg-left-bottom leading-0 pb-[0.1em] bg-p before:content-[''] before:block before:absolute before:top-[-10px] before:left-[-60px] before:w-[calc(100%+120px)] before:h-[calc(100%+20px)] before:bg-white before:z-[-10] after:content-[''] after:h-[90px] after:relative after:inline-block">
							{{sentences[0]}}
						</span>							
					{% endif %}
					{% if sentences[1] is defined %}
						<span class="line2 block relative z-10 left text-black clear-both bg-color-line-offset pl-[10px] left-[-10px] bg-repeat-x bg-[length:100vw_0.2em] bg-left-bottom leading-0 pb-[0.1em] bg-p before:content-[''] before:block before:absolute before:top-[-10px] before:left-[-60px] before:w-[calc(100%+120px)] before:h-[calc(100%+20px)] before:bg-white before:z-[-10] after:content-[''] after:h-[90px] after:relative after:inline-block">
							{{sentences[1]}}
						</span>
					{% endif %}
					{% if sentences[2] is defined %}
						<span class="line3 block relative z-10 left text-black clear-both bg-color-line pl-[10px] left-[-10px] bg-repeat-x bg-[length:100vw_0.2em] bg-left-bottom leading-0 pb-[0.1em] bg-p before:content-[''] before:block before:absolute before:top-[-10px] before:left-[-60px] before:w-[calc(100%+120px)] before:h-[calc(100%+20px)] before:bg-white before:z-[-10] after:content-[''] after:h-[90px] after:relative after:inline-block">
							{{sentences[2]}}
						</span>
					{% endif %}
					
				</span>
			</div>
		</div>
	</section>
	
{% endblock %}
