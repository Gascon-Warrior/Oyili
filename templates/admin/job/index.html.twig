{% extends 'admin/base.html.twig' %}

{% block title %}Hello AdminJobController!{% endblock %}

{% block main %}
	<div class="px-4 sm:px-6 lg:px-8">
		<div class="sm:flex sm:items-center">
			<div class="sm:flex-auto">
				<h1 class="text-base font-semibold leading-6 text-th-noir mt-24">Métiers</h1>
				<p class="mt-2 text-sm text-gray-700">Liste des métiers.</p>
			</div>
			<div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
				<a href="{{ path('admin_job_add') }}">
					<button type="button" class="block rounded-md bg-th-orange px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-th-orange-hover focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Ajouter un métier</button>
				</a>
			</div>
		</div>
		<div class="mt-8 flow-root">
			<div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
				<div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
					<div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
						<table class="min-w-full divide-y divide-gray-300">
							<thead class="bg-th-beige">
								<tr>
									<th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-th-noir sm:pl-6">Job</th>

									<th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
										<span class="sr-only">Modifier</span>
									</th>

								</tr>
							</thead>
							<tbody class="divide-y divide-gray-200 bg-white">
								{% for job in jobs %}
									<tr>
										<td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-th-noir sm:pl-6">{{ job.label }}</td>
										<td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
											<a href="{{ path('admin_job_edit', {id: job.id}) }}" class="text-indigo-600 hover:text-indigo-900">Modifier<span class="sr-only">, {{ job.label }}</span>
											</a>
											<a href="{{ path('admin_job_delete', {id: job.id}) }}" class="text-red-600 hover:text-red-900 ml-4">Supprimer<span class="sr-only">, {{ job.label }}</span>
											</a>
										</td>
									</tr>
								{% endfor %}
								<!-- More people... -->
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}

