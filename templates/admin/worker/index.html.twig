{% extends 'admin/base.html.twig' %}

{% block title %}Collaborateurs
{% endblock %}

{% block main %}
	<div class="px-4 sm:px-6 lg:px-8">
		<div class="sm:flex sm:items-center">
			<div class="sm:flex-auto">
				<h1 class="text-base font-semibold leading-6 text-gray-900 mt-24">Collaborateurs</h1>
				<p class="mt-2 text-sm text-gray-700">Liste des collaborateurs</p>
			</div>
			<div class="mt-4 sm:ml-16 sm:mt-0 sm:flex-none">
        <a href="{{ path('admin_worker_add') }}">
				  <button type="button" class="block rounded-md bg-th-orange px-3 py-2 text-center text-sm font-semibold text-white shadow-sm hover:bg-th-orange-hover focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">Ajouter un collaborateur</button>
			  </a>
      </div>
		</div>
		<div class="mt-8 flow-root">
			<div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
				<div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
					<div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
						<table class="min-w-full divide-y divide-gray-300">
							<thead class="bg-th-beige">
								<tr>
									<th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Nom</th>									
									<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Métier</th>
									<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Présentation</th>
									<th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Photo(s)</th>
									<th scope="col" class="relative py-3.5 pl-3 pr-4 sm:pr-6">
										<span class="sr-only">Mofidier</span>
									</th>
								</tr>
							</thead>
							<tbody class="divide-y divide-gray-200 bg-white">
								{% for worker in workers %}                
									<tr>
										<td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6 capitalize">{{ worker.firstname}} {{ worker.lastname}}</td>
										<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500">{{ worker.position}}</td>
										<td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 text-wrap">{{ worker.presentation}}</td>
                    <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500 text-wrap">
                    {% for picture in worker.pictures %}
                      <img src="{{ asset('assets/uploads/img/') ~ picture.pictureFileName }}" alt="{{ picture.alt }}">										
                    </td>
                    {% endfor %}
										<td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
											<a href="{{ path('admin_worker_edit',  {id: worker.id})}}" class="text-indigo-600 hover:text-indigo-900">Modifier<span class="sr-only">,
													{{ worker.firstname}}
													{{ worker.lastname}}
												</span>
											</a>
											<a href="{{ path('admin_worker_delete',  {id: worker.id})}}" class="text-red-600 hover:text-red-900 ml-4">Supprimer<span class="sr-only">,
													{{ worker.firstname}}
													{{ worker.lastname}}
												</span>
											</a>
										</td>
									</tr>
								{% endfor %}
								<!-- More people... -->
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>

{% endblock %}
